---
// Header con navegación principal
import CartIcon from '@/islands/CartIcon';

const currentPath = Astro.url.pathname;
---

<header class="bg-white border-b border-gray-200 sticky top-0 z-50">
  <div class="container mx-auto px-4 py-4">
    <div class="flex items-center justify-between">
      <!-- Logo -->
      <a href="/" class="hover:opacity-80 transition-opacity">
        <img src="/logo-horizontal.svg" alt="NutreTerra" class="h-16 w-auto" />
      </a>

      <!-- Navegación Desktop -->
      <nav class="hidden md:flex items-center gap-8">
        <a
          href="/"
          class={currentPath === '/' ? 'nav-link nav-link-active' : 'nav-link'}
        >
          Inicio
        </a>
        <a
          href="/categoria/cereales"
          class={currentPath.startsWith('/categoria') ? 'nav-link nav-link-active' : 'nav-link'}
        >
          Productos
        </a>
        <a
          href="/contacto"
          class={currentPath === '/contacto' ? 'nav-link nav-link-active' : 'nav-link'}
        >
          Contacto
        </a>
      </nav>

      <!-- Iconos de usuario y carrito -->
      <div class="flex items-center gap-4">
        <!-- Icono de usuario -->
        <a
          href="/cuenta"
          class="text-gray-700 hover:text-primary transition-colors"
          title="Mi Cuenta"
        >
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
          </svg>
        </a>

        <!-- Icono de carrito -->
        <CartIcon client:load />
      </div>
    </div>
  </div>
</header>
