---
// Página de línea de producto
import Layout from '@/layouts/Layout.astro';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
import Breadcrumbs from '@/components/Breadcrumbs.astro';

import { getProducts, getProductLines } from '@/lib/api';

export async function getStaticPaths() {
  const productLines = await getProductLines();
  return productLines.map((line) => ({
    params: { slug: line.slug },
    props: { productLine: line },
  }));
}

const { productLine } = Astro.props;

// Obtener productos de esta línea
const products = await getProducts({ productLine: productLine.slug });
---

<Layout title={`${productLine.name} - NutreTerra`} description={productLine.description}>
  <Header />

  <main class="py-8">
    <div class="container mx-auto px-4">
      <!-- Breadcrumbs -->
      <Breadcrumbs
        items={[
          { name: 'Líneas de Producto', href: '/#lineas' },
          { name: productLine.name, href: `/linea/${productLine.slug}` },
        ]}
      />

      <!-- Cabecera de la Línea -->
      <div class="mb-16 text-center">
        <div class="inline-flex items-center justify-center w-24 h-24 bg-primary/10 rounded-3xl mb-6" set:html={productLine.icon} />

        <h1 class="text-4xl md:text-6xl font-bold text-gray-900 mb-6 tracking-tight">
          {productLine.name}
        </h1>

        <p class="text-xl text-gray-600 max-w-3xl mx-auto leading-relaxed">
          {productLine.description}
        </p>

        {productLine.productCount && productLine.productCount > 0 && (
          <p class="mt-4 text-sm text-gray-500">
            {productLine.productCount} {productLine.productCount === 1 ? 'producto disponible' : 'productos disponibles'}
          </p>
        )}
      </div>

      <!-- Grid de Productos -->
      {products.length > 0 ? (
        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-x-6 gap-y-10">
          {products.map((product) => (
            <a href={`/producto/${product.slug}`} class="group block">
              <div class="relative overflow-hidden rounded-2xl bg-gray-100 aspect-[4/5] mb-4">
                <img
                  src={product.imageUrl}
                  alt={product.name}
                  class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105"
                />
                {product.compareAtPrice && (
                  <div class="absolute top-3 left-3 bg-white/90 backdrop-blur-sm text-gray-900 text-xs font-bold px-3 py-1 rounded-full">
                    Oferta
                  </div>
                )}
                <div class="absolute inset-0 bg-black/0 group-hover:bg-black/10 transition-colors duration-300"></div>
              </div>

              <div class="space-y-1">
                <h3 class="font-medium text-gray-900 text-lg leading-tight group-hover:text-primary transition-colors">
                  {product.name}
                </h3>
                <div class="flex items-center justify-between">
                  <p class="text-sm text-gray-500">
                    {product.calories ? `${product.calories} kcal` : 'Saludable'}
                  </p>
                  <div class="flex items-baseline gap-2">
                    <span class="text-lg font-semibold text-gray-900">
                      {product.price.toFixed(2)}€
                    </span>
                    {product.compareAtPrice && (
                      <span class="text-sm text-gray-400 line-through">
                        {product.compareAtPrice.toFixed(2)}€
                      </span>
                    )}
                  </div>
                </div>
              </div>
            </a>
          ))}
        </div>
      ) : (
        <div class="text-center py-16">
          <p class="text-xl text-gray-500 mb-4">
            Aún no hay productos disponibles en esta línea.
          </p>
          <a href="/productos" class="inline-block px-8 py-3 bg-primary text-white font-medium rounded-full hover:bg-primary/90 transition-colors">
            Ver todos los productos
          </a>
        </div>
      )}
    </div>
  </main>

  <Footer />
</Layout>
