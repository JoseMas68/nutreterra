---
// Página principal de NutreTerra
import Layout from '@/layouts/Layout.astro';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
import Hero from '@/components/Hero.astro';
import ProductCard from '@/components/ProductCard.astro';
import CategoryCard from '@/components/CategoryCard.astro';

import { getProducts, getCategories, getProductLines } from '@/lib/api';

// Obtener productos destacados desde la API
const featuredProducts = await getProducts({ featured: true, limit: 8 });

// Obtener categorías desde la API
const categories = await getCategories();

// Obtener líneas de producto activas
const productLines = (await getProductLines()).filter(line => line.active);
---

<Layout title="NutreTerra - Productos Naturales y Saludables">
  <Header />

  <!-- Hero Section -->
  <Hero />

  <!-- Productos Destacados -->
  <section class="py-24 bg-white">
    <div class="container mx-auto px-4">
      <div class="flex flex-col md:flex-row justify-between items-end mb-12 gap-6">
        <div class="max-w-2xl">
          <span class="text-primary font-bold tracking-wider uppercase text-sm mb-2 block">Nuestra Selección</span>
          <h2 class="text-4xl md:text-5xl font-bold text-gray-900 tracking-tight">
            Favoritos de la semana
          </h2>
        </div>
        <a href="/productos" class="hidden md:inline-flex items-center gap-2 text-gray-900 font-semibold hover:text-primary transition-colors group">
          Ver todo el menú
          <span class="block w-8 h-[1px] bg-gray-900 group-hover:bg-primary transition-colors"></span>
        </a>
      </div>

      <!-- Grid de Productos - Minimalista -->
      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-x-6 gap-y-10">
        {featuredProducts.map((product) => (
          <a href={`/producto/${product.slug}`} class="group block">
            <div class="relative overflow-hidden rounded-2xl bg-gray-100 aspect-[4/5] mb-4">
              <img
                src={product.imageUrl}
                alt={product.name}
                class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105"
              />
              {product.compareAtPrice && (
                <div class="absolute top-3 left-3 bg-white/90 backdrop-blur-sm text-gray-900 text-xs font-bold px-3 py-1 rounded-full">
                  Oferta
                </div>
              )}
              <div class="absolute inset-0 bg-black/0 group-hover:bg-black/10 transition-colors duration-300"></div>
            </div>
            
            <div class="space-y-1">
              <h3 class="font-medium text-gray-900 text-lg leading-tight group-hover:text-primary transition-colors">
                {product.name}
              </h3>
              <div class="flex items-center justify-between">
                <p class="text-sm text-gray-500">
                  {product.calories ? `${product.calories} kcal` : 'Saludable'}
                </p>
                <div class="flex items-baseline gap-2">
                  <span class="text-lg font-semibold text-gray-900">
                    {product.price.toFixed(2)}€
                  </span>
                  {product.compareAtPrice && (
                    <span class="text-sm text-gray-400 line-through">
                      {product.compareAtPrice.toFixed(2)}€
                    </span>
                  )}
                </div>
              </div>
            </div>
          </a>
        ))}
      </div>

      <!-- Ver todos (Móvil) -->
      <div class="mt-12 text-center md:hidden">
        <a href="/productos" class="inline-block px-8 py-3 bg-gray-900 text-white font-medium rounded-full hover:bg-gray-800 transition-colors">
          Ver todo el menú
        </a>
      </div>
    </div>
  </section>

  <!-- Cómo Funciona - Dos Formas de Comprar -->
  <section class="py-24 bg-gradient-to-br from-primary/5 via-leaf/5 to-cream/30">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto text-center mb-20">
        <h2 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6 tracking-tight">
          Tu alimentación, <span class="text-primary">a tu manera</span>
        </h2>
        <p class="text-xl text-gray-500 font-light">
          Dos formas simples de disfrutar de comida real. Sin suscripciones forzosas.
        </p>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 max-w-5xl mx-auto">
        <!-- Opción 1: Planificador (Destacado) -->
        <div class="group relative bg-white rounded-[2.5rem] p-10 shadow-xl hover:shadow-2xl transition-all duration-500 border-[3px] border-primary/20 hover:border-primary overflow-hidden transform hover:-translate-y-1">
          <!-- Etiqueta Destacada -->
          <div class="absolute top-0 right-0 bg-primary text-white text-xs font-bold px-6 py-2 rounded-bl-2xl rounded-tr-[2.2rem] z-20 tracking-widest uppercase">
            Más Popular
          </div>

          <!-- Formas Geométricas de Fondo (Círculos Orgánicos) -->
          <div class="absolute top-0 right-0 w-64 h-64 bg-primary/10 rounded-full -mr-16 -mt-16 blur-2xl group-hover:bg-primary/15 transition-colors duration-500"></div>
          <div class="absolute bottom-0 left-0 w-48 h-48 bg-green-100/50 rounded-full -ml-12 -mb-12 blur-xl group-hover:bg-green-100 transition-colors duration-500"></div>
          <div class="absolute inset-0 bg-[url('/images/grid-pattern.svg')] opacity-[0.03]"></div>
          
          <div class="relative z-10">
            <div class="mb-8">
              <div class="w-20 h-20 bg-primary text-white shadow-lg shadow-primary/30 rounded-2xl flex items-center justify-center mb-8 group-hover:scale-110 transition-transform duration-500 rotate-3 group-hover:rotate-6">
                <svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01"></path>
                </svg>
              </div>
              <h3 class="text-3xl font-black text-gray-900 mb-3 tracking-tight">
                Planificador <span class="text-primary">Semanal</span>
              </h3>
              <p class="text-gray-600 text-lg leading-relaxed font-medium">
                La forma más inteligente de comer. Diseña tu menú, ahorra dinero y cumple tus objetivos.
              </p>
            </div>

            <div class="space-y-5 mb-10 bg-white/60 p-6 rounded-2xl backdrop-blur-sm border border-primary/10">
              <div class="flex items-center gap-4">
                <div class="w-8 h-8 rounded-full bg-primary/20 flex items-center justify-center text-primary font-bold text-sm">1</div>
                <span class="text-gray-800 font-semibold">Define tus objetivos</span>
              </div>
              <div class="flex items-center gap-4">
                <div class="w-8 h-8 rounded-full bg-primary/20 flex items-center justify-center text-primary font-bold text-sm">2</div>
                <span class="text-gray-800 font-semibold">Elige tus platos</span>
              </div>
              <div class="flex items-center gap-4">
                <div class="w-8 h-8 rounded-full bg-primary/20 flex items-center justify-center text-primary font-bold text-sm">3</div>
                <span class="text-gray-800 font-semibold">Recibe y disfruta</span>
              </div>
            </div>

            <a href="/planificador" class="block w-full py-4 bg-primary text-white text-center font-bold rounded-xl hover:bg-primary/90 transition-all duration-300 shadow-xl shadow-primary/30 hover:shadow-primary/40 transform hover:-translate-y-0.5">
              Empezar a planificar
            </a>
          </div>
        </div>

        <!-- Opción 2: Catálogo (Secundario) -->
        <div class="group relative bg-seed/5 rounded-[2.5rem] p-10 shadow-md hover:shadow-xl transition-all duration-500 border-2 border-seed/20 hover:border-seed overflow-hidden transform hover:-translate-y-1">
          <!-- Formas Geométricas de Fondo (Cuadrados/Ángulos) -->
          <div class="absolute top-0 right-0 w-40 h-40 bg-seed/10 rounded-3xl rotate-12 -mr-8 -mt-8 group-hover:bg-seed/20 transition-colors duration-500"></div>
          <div class="absolute bottom-0 left-0 w-32 h-32 bg-orange-100/50 rounded-full blur-2xl -ml-8 -mb-8"></div>
          
          <div class="relative z-10">
            <div class="mb-8">
              <div class="w-20 h-20 bg-white border-2 border-seed/10 text-seed shadow-sm rounded-2xl flex items-center justify-center mb-8 group-hover:scale-110 transition-transform duration-500 -rotate-3 group-hover:-rotate-6">
                <svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path>
                </svg>
              </div>
              <h3 class="text-3xl font-bold text-gray-900 mb-3 tracking-tight">
                Compra a la Carta
              </h3>
              <p class="text-gray-600 text-lg leading-relaxed font-medium">
                Para cuando solo necesitas unos platos sueltos o quieres probar algo nuevo.
              </p>
            </div>

            <div class="space-y-5 mb-10 p-6 bg-white/50 rounded-2xl border border-seed/10">
              <div class="flex items-center gap-4">
                <div class="w-8 h-8 rounded-full bg-white border border-seed/20 flex items-center justify-center text-seed font-bold text-sm">1</div>
                <span class="text-gray-700 font-medium">Explora el catálogo</span>
              </div>
              <div class="flex items-center gap-4">
                <div class="w-8 h-8 rounded-full bg-white border border-seed/20 flex items-center justify-center text-seed font-bold text-sm">2</div>
                <span class="text-gray-700 font-medium">Filtra a tu gusto</span>
              </div>
              <div class="flex items-center gap-4">
                <div class="w-8 h-8 rounded-full bg-white border border-seed/20 flex items-center justify-center text-seed font-bold text-sm">3</div>
                <span class="text-gray-700 font-medium">Sin compromisos</span>
              </div>
            </div>

            <a href="/productos" class="block w-full py-4 bg-white border-2 border-seed text-seed text-center font-bold rounded-xl hover:bg-seed hover:text-white transition-all duration-300 hover:shadow-lg hover:shadow-seed/20 transform hover:-translate-y-0.5">
              Ver catálogo completo
            </a>
          </div>
        </div>
      </div>

      <!-- Entrega -->
      <div class="mt-16 text-center">
        <p class="text-gray-500 text-lg">
          Envío gratis en pedidos superiores a <span class="font-bold text-gray-900">50€</span> • Entrega en <span class="font-bold text-gray-900">24-48h</span>
        </p>
      </div>
    </div>
  </section>

  <!-- Líneas de Producto -->
  <section class="py-24 bg-white">
    <div class="container mx-auto px-4">
      <div class="text-center mb-20">
        <span class="text-primary font-medium tracking-wider uppercase text-xs mb-3 block">Nuestras Colecciones</span>
        <h2 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6 tracking-tight">
          Líneas de Producto
        </h2>
        <p class="text-xl text-gray-500 max-w-2xl mx-auto font-light">
          Diseñadas para adaptarse a tu estilo de vida y objetivos.
        </p>
      </div>

      <!-- Grid de Líneas -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-6xl mx-auto">
        {productLines.map((line, index) => {
          const bgColors = [
            'bg-orange-50 hover:bg-orange-100',
            'bg-green-50 hover:bg-green-100',
            'bg-blue-50 hover:bg-blue-100',
            'bg-purple-50 hover:bg-purple-100',
          ];
          const textColors = [
            'text-orange-900',
            'text-green-900',
            'text-blue-900',
            'text-purple-900',
          ];
          const iconColors = [
            'text-orange-600 bg-orange-100',
            'text-green-600 bg-green-100',
            'text-blue-600 bg-blue-100',
            'text-purple-600 bg-purple-100',
          ];

          return (
            <a
              href={`/linea/${line.slug}`}
              class={`group relative ${bgColors[index % 4]} rounded-[2rem] p-10 transition-all duration-500 flex flex-col h-full overflow-hidden hover:shadow-xl`}
            >
              <div class="flex items-start justify-between mb-8 relative z-10">
                <div
                  class={`w-16 h-16 ${iconColors[index % 4]} rounded-2xl flex items-center justify-center transition-transform duration-500 group-hover:scale-110 group-hover:rotate-3`}
                  set:html={line.icon}
                />
                {line.productCount && line.productCount > 0 && (
                  <span class="bg-white/80 backdrop-blur-sm px-4 py-1.5 rounded-full text-xs font-bold text-gray-600">
                    {line.productCount} productos
                  </span>
                )}
              </div>

              <h3 class={`text-2xl font-bold mb-3 ${textColors[index % 4]} relative z-10`}>
                {line.name}
              </h3>

              <p class="text-gray-600 mb-8 leading-relaxed text-lg flex-grow relative z-10">
                {line.description}
              </p>

              <div class="flex items-center gap-3 font-medium text-gray-900 group-hover:gap-4 transition-all duration-300 mt-auto relative z-10">
                <span>Explorar</span>
                <svg class="w-5 h-5 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                </svg>
              </div>
              
              <!-- Decorative circle -->
              <div class="absolute -bottom-10 -right-10 w-64 h-64 bg-white/40 rounded-full blur-3xl group-hover:scale-150 transition-transform duration-700"></div>
            </a>
          );
        })}
      </div>
    </div>
  </section>

  <!-- Categorías -->
  <section class="section">
    <div class="container mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
          Explora por <span class="text-primary">Categoría</span>
        </h2>
        <p class="text-lg text-gray-600 max-w-2xl mx-auto">
          Encuentra exactamente lo que buscas navegando por nuestras categorías.
        </p>
      </div>

      <!-- Grid de Categorías -->
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-6 max-w-5xl mx-auto">
        {categories.map((category) => (
          <CategoryCard category={category} />
        ))}
      </div>
    </div>
  </section>

  <!-- Por qué elegirnos -->
  <section class="py-24 bg-white">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-6 tracking-tight">
          ¿Por qué <span class="text-primary">NutreTerra</span>?
        </h2>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        <!-- Feature 1 -->
        <div class="text-center p-6">
          <div class="w-16 h-16 bg-primary/10 rounded-full flex items-center justify-center mx-auto mb-6 text-primary">
            <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-bold text-gray-900 mb-3">100% Saludable</h3>
          <p class="text-gray-500 leading-relaxed text-sm">Ingredientes naturales, sin conservantes ni procesados. Certificación nutricional en cada plato.</p>
        </div>

        <!-- Feature 2 -->
        <div class="text-center p-6">
          <div class="w-16 h-16 bg-leaf/10 rounded-full flex items-center justify-center mx-auto mb-6 text-leaf">
            <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-bold text-gray-900 mb-3">Ahorra Tiempo</h3>
          <p class="text-gray-500 leading-relaxed text-sm">Olvídate de cocinar y planificar. Platos listos en minutos para que disfrutes tu tiempo libre.</p>
        </div>

        <!-- Feature 3 -->
        <div class="text-center p-6">
          <div class="w-16 h-16 bg-accent/10 rounded-full flex items-center justify-center mx-auto mb-6 text-accent">
            <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
            </svg>
          </div>
          <h3 class="text-lg font-bold text-gray-900 mb-3">Control de Macros</h3>
          <p class="text-gray-500 leading-relaxed text-sm">Información nutricional detallada. Alcanza tus objetivos con precisión y sin complicaciones.</p>
        </div>

        <!-- Feature 4 -->
        <div class="text-center p-6">
          <div class="w-16 h-16 bg-blue-50 rounded-full flex items-center justify-center mx-auto mb-6 text-blue-600">
            <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m-9 4h4"></path>
            </svg>
          </div>
          <h3 class="text-lg font-bold text-gray-900 mb-3">Envío Express</h3>
          <p class="text-gray-500 leading-relaxed text-sm">Entrega en 24-48h. Envío gratis desde 50€. Tus comidas frescas cuando las necesites.</p>
        </div>
      </div>

      <!-- CTA adicional -->
      <div class="mt-16 text-center">
        <div class="inline-block bg-white rounded-2xl shadow-xl p-8 max-w-2xl">
          <p class="text-2xl font-bold text-gray-900 mb-4">
            ¿Listo para empezar tu transformación saludable?
          </p>
          <p class="text-gray-600 mb-6">
            Únete a miles de personas que ya han mejorado su alimentación con NutreTerra
          </p>
          <a href="/planificador" class="inline-block px-10 py-4 bg-gradient-to-r from-primary to-leaf text-white font-bold rounded-xl hover:shadow-2xl transition-all transform hover:scale-105">
            Crear Mi Primer Menú Gratis
          </a>
        </div>
      </div>
    </div>
  </section>

  <Footer />
</Layout>
