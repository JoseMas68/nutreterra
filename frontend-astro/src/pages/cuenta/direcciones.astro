---
// Panel de usuario - Mis Direcciones
import Layout from '@/layouts/Layout.astro';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
import ProtectedRoute from '@/islands/ProtectedRoute';

// TODO: En producción, esto debería obtener las direcciones del usuario desde la API
const addresses = [
  {
    id: '1',
    name: 'Casa',
    fullName: 'Juan Pérez',
    street: 'Calle Principal 123',
    city: 'Madrid',
    postalCode: '28001',
    phone: '+34 600 000 000',
    isDefault: true,
  },
];
---

<Layout title="Mis Direcciones - NutreTerra" description="Gestiona tus direcciones de envío">
  <Header />

  <main class="min-h-screen bg-gradient-to-b from-white to-primary/5 py-16">
    <ProtectedRoute client:load>
    <div class="container mx-auto px-4">
      <h1 class="text-4xl font-bold text-gray-900 mb-8">Mis Direcciones</h1>

      <div class="grid grid-cols-1 lg:grid-cols-4 gap-8">
        <!-- Sidebar de navegación -->
        <aside class="lg:col-span-1">
          <nav class="bg-white rounded-lg shadow-sm p-4 space-y-2">
            <a
              href="/cuenta"
              class="flex items-center gap-3 px-4 py-3 rounded-lg text-gray-700 hover:bg-gray-50 font-medium transition-colors"
            >
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
              </svg>
              Mi Perfil
            </a>
            <a
              href="/cuenta/pedidos"
              class="flex items-center gap-3 px-4 py-3 rounded-lg text-gray-700 hover:bg-gray-50 font-medium transition-colors"
            >
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path>
              </svg>
              Mis Pedidos
            </a>
            <a
              href="/cuenta/direcciones"
              class="flex items-center gap-3 px-4 py-3 rounded-lg bg-primary text-white font-medium"
            >
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
              Direcciones
            </a>
            <a
              href="/logout"
              class="flex items-center gap-3 px-4 py-3 rounded-lg text-red-600 hover:bg-red-50 font-medium transition-colors"
            >
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
              </svg>
              Cerrar Sesión
            </a>
          </nav>
        </aside>

        <!-- Contenido principal -->
        <div class="lg:col-span-3">
          <div class="mb-6 flex justify-between items-center">
            <h2 class="text-2xl font-bold text-gray-900">Direcciones de Envío</h2>
            <button
              onclick="alert('Funcionalidad en desarrollo')"
              class="btn-primary"
            >
              + Nueva Dirección
            </button>
          </div>

          {addresses.length === 0 ? (
            <div class="bg-white rounded-lg shadow-sm p-12 text-center">
              <svg class="w-16 h-16 mx-auto text-gray-300 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
              </svg>
              <h3 class="text-xl font-semibold text-gray-900 mb-2">No tienes direcciones guardadas</h3>
              <p class="text-gray-600 mb-6">Añade una dirección de envío para agilizar tus pedidos</p>
              <button
                onclick="alert('Funcionalidad en desarrollo')"
                class="btn-primary inline-block"
              >
                Añadir Dirección
              </button>
            </div>
          ) : (
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              {addresses.map((address) => (
                <div class="bg-white rounded-lg shadow-sm p-6 relative">
                  {address.isDefault && (
                    <span class="absolute top-4 right-4 px-3 py-1 bg-primary text-white text-xs font-semibold rounded-full">
                      Principal
                    </span>
                  )}

                  <h3 class="text-lg font-semibold text-gray-900 mb-4">{address.name}</h3>

                  <div class="space-y-2 text-gray-700 mb-6">
                    <p class="font-medium">{address.fullName}</p>
                    <p>{address.street}</p>
                    <p>{address.postalCode}, {address.city}</p>
                    <p class="text-sm text-gray-600">{address.phone}</p>
                  </div>

                  <div class="flex gap-3">
                    <button
                      onclick="alert('Funcionalidad en desarrollo')"
                      class="flex-1 px-4 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition-colors font-medium"
                    >
                      Editar
                    </button>
                    {!address.isDefault && (
                      <button
                        onclick="alert('Funcionalidad en desarrollo')"
                        class="flex-1 px-4 py-2 border border-red-300 text-red-600 rounded-lg hover:bg-red-50 transition-colors font-medium"
                      >
                        Eliminar
                      </button>
                    )}
                  </div>

                  {!address.isDefault && (
                    <button
                      onclick="alert('Funcionalidad en desarrollo')"
                      class="w-full mt-3 px-4 py-2 text-primary hover:text-leaf transition-colors font-medium text-sm"
                    >
                      Marcar como principal
                    </button>
                  )}
                </div>
              ))}
            </div>
          )}
        </div>
      </div>
    </div>
    </ProtectedRoute>
  </main>

  <Footer />
</Layout>
