---
import Layout from '@/layouts/Layout.astro';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
import ProtectedRoute from '@/islands/ProtectedRoute';
---

<Layout title="Mi Cuenta - NutreTerra">
  <Header />

  <main class="min-h-screen bg-gradient-to-b from-white to-primary/5 py-16">
    <ProtectedRoute client:load>
      <div class="container mx-auto px-4">
        <!-- Bienvenida -->
        <div class="text-center mb-12">
          <h1 class="text-4xl font-bold text-gray-900 mb-3">
            ¡Bienvenido a tu cuenta!
          </h1>
          <p class="text-gray-600">
            Gestiona tu información y pedidos desde aquí
          </p>
        </div>

        <!-- Grid de opciones -->
        <div class="max-w-6xl mx-auto grid md:grid-cols-2 lg:grid-cols-3 gap-6">

          <!-- Mi Perfil -->
          <a
            href="/cuenta/perfil"
            class="bg-white rounded-2xl shadow-lg hover:shadow-xl transition-all p-8 border border-gray-100 hover:border-primary group"
          >
            <div class="w-16 h-16 bg-primary/10 rounded-xl flex items-center justify-center mb-4 group-hover:bg-primary/20 transition-colors">
              <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
              </svg>
            </div>
            <h2 class="text-xl font-bold text-gray-900 mb-2">Mi Perfil</h2>
            <p class="text-gray-600">
              Actualiza tu información personal y preferencias
            </p>
          </a>

          <!-- Mis Pedidos -->
          <a
            href="/cuenta/pedidos"
            class="bg-white rounded-2xl shadow-lg hover:shadow-xl transition-all p-8 border border-gray-100 hover:border-primary group"
          >
            <div class="w-16 h-16 bg-leaf/10 rounded-xl flex items-center justify-center mb-4 group-hover:bg-leaf/20 transition-colors">
              <svg class="w-8 h-8 text-leaf" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
              </svg>
            </div>
            <h2 class="text-xl font-bold text-gray-900 mb-2">Mis Pedidos</h2>
            <p class="text-gray-600">
              Revisa el estado de tus pedidos y compras anteriores
            </p>
          </a>

          <!-- Direcciones -->
          <a
            href="/cuenta/direcciones"
            class="bg-white rounded-2xl shadow-lg hover:shadow-xl transition-all p-8 border border-gray-100 hover:border-primary group"
          >
            <div class="w-16 h-16 bg-accent/10 rounded-xl flex items-center justify-center mb-4 group-hover:bg-accent/20 transition-colors">
              <svg class="w-8 h-8 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
            </div>
            <h2 class="text-xl font-bold text-gray-900 mb-2">Mis Direcciones</h2>
            <p class="text-gray-600">
              Gestiona tus direcciones de envío
            </p>
          </a>

          <!-- Métodos de Pago -->
          <a
            href="/cuenta/pagos"
            class="bg-white rounded-2xl shadow-lg hover:shadow-xl transition-all p-8 border border-gray-100 hover:border-primary group"
          >
            <div class="w-16 h-16 bg-primary/10 rounded-xl flex items-center justify-center mb-4 group-hover:bg-primary/20 transition-colors">
              <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z" />
              </svg>
            </div>
            <h2 class="text-xl font-bold text-gray-900 mb-2">Métodos de Pago</h2>
            <p class="text-gray-600">
              Administra tus tarjetas y métodos de pago
            </p>
          </a>

          <!-- Favoritos -->
          <a
            href="/cuenta/favoritos"
            class="bg-white rounded-2xl shadow-lg hover:shadow-xl transition-all p-8 border border-gray-100 hover:border-primary group"
          >
            <div class="w-16 h-16 bg-leaf/10 rounded-xl flex items-center justify-center mb-4 group-hover:bg-leaf/20 transition-colors">
              <svg class="w-8 h-8 text-leaf" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
              </svg>
            </div>
            <h2 class="text-xl font-bold text-gray-900 mb-2">Favoritos</h2>
            <p class="text-gray-600">
              Productos que has guardado para después
            </p>
          </a>

          <!-- Configuración -->
          <a
            href="/cuenta/configuracion"
            class="bg-white rounded-2xl shadow-lg hover:shadow-xl transition-all p-8 border border-gray-100 hover:border-primary group"
          >
            <div class="w-16 h-16 bg-accent/10 rounded-xl flex items-center justify-center mb-4 group-hover:bg-accent/20 transition-colors">
              <svg class="w-8 h-8 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
            </div>
            <h2 class="text-xl font-bold text-gray-900 mb-2">Configuración</h2>
            <p class="text-gray-600">
              Ajusta tus preferencias y notificaciones
            </p>
          </a>

        </div>
      </div>
    </ProtectedRoute>
  </main>

  <Footer />
</Layout>
